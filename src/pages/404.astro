---
import Layout from '../layouts/Layout.astro';

export const prerender = true;
---

<Layout title="Page Not Found - Studio Garibaldi" description="Page not found">
  <div class="not-found">
    <h1>404 - Page Not Found</h1>
    <p>Sorry, the page you're looking for doesn't exist.</p>
    <a href="/">Go Home</a>
  </div>
</Layout>

<style>
  .not-found {
    text-align: center;
    padding: var(--space-lg);
  }

  .not-found h1 {
    font-size: 3rem;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .not-found p {
    font-size: 1.8rem;
    color: var(--text-color);
    margin-bottom: 2rem;
  }

  .not-found a {
    display: inline-block;
    padding: 1rem 2rem;
    background: var(--link-color);
    color: white;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.2s ease;
  }

  .not-found a:hover {
    background: var(--link-color-hover);
  }
</style>
